<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imgsign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/sing_ico"
        />




    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgsign"
    android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:text="签名"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonclickstyle"
        android:id="@+id/btnsign"
        android:textColor="@color/black"

        />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/btnsign"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:id="@+id/radio1"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满意"
            android:id="@+id/r_ok"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:checked="true"
            android:paddingLeft="35dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不满意"
            android:id="@+id/r_no"
            android:paddingLeft="35dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            />

        </RadioGroup>
    <EditText
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="扫描/输入雇主编号"
        android:id="@+id/customercode"
        android:background="@drawable/edittext_style"
        android:singleLine="true"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:inputType="text"

        android:layout_below="@+id/radio1"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnquestcode"
        android:text="呼叫助理"

        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonclickstyle"
        android:id="@+id/btntel"
        android:textColor="@color/red1"
        android:visibility="gone"
        />


    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="确认"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonclickstyle"
        android:id="@+id/buttonok"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="授权申请"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonclickstyle"
        android:id="@+id/btnquestcode"
        android:textColor="@color/black"
        android:layout_below="@+id/customercode"
        android:layout_alignLeft="@+id/buttonok"
        />



    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="刷新"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/buttonok"
        android:background="@drawable/buttonclickstyle"
        android:id="@+id/btnrefresh"
        android:textColor="@color/black"
        android:layout_below="@+id/customercode"
        />
</RelativeLayout>
