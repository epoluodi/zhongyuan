<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.apollo.elevator_check.setting"
    android:id="@+id/r1">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="服务设置"
    android:textSize="24dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:id="@+id/t1"
    android:textColor="@color/black"

    />
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_style"
        android:layout_below="@+id/t1"
        android:hint="地址：218.91.156.62"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="22dp"
        android:id="@+id/textserver"
        android:text="218.91.156.62"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttondownload"
        android:background="@drawable/buttonclickstyle"
        android:text="保存"
        android:textSize="24dp"
        android:id="@+id/buttonsave"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonclickstyle"
        android:text="同步基本数据"
        android:textSize="24dp"
        android:id="@+id/buttondownload"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonclickstyle"
        android:text="更新APP"
        android:textSize="24dp"
        android:layout_above="@+id/buttonsave"
        android:id="@+id/btnupdateapp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
