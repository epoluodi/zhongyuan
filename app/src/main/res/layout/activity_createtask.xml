<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context="com.apollo.elevator_check.createtask">


<TextView
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:text="操作人：工号+名称"
    android:textColor="@color/black"
    android:textSize="22dp"
    android:gravity="center"
    android:background="@color/steelblue"
    android:id="@+id/title"

    />
<TextView
    android:layout_below="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="项目名称："
    android:textColor="@color/black"
    android:textSize="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/t1"
    />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="5dp"
        android:hint="扫描/输入项目编号"
        android:id="@+id/textprojectno"
        android:background="@drawable/edittext_style"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:paddingLeft="5dp"
        android:inputType="numberDecimal"
        />

    <!--android:text="A-AGYF201010"-->
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@+id/t1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="扫描"
        android:id="@+id/scan1"
        android:background="@drawable/buttonclickstyle"
        />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/dttype"
        android:layout_below="@+id/textprojectno"
        android:layout_marginTop="5dp"

        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/dttype"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电梯编号："
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/t2"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:hint="扫描/输入电梯编号"
            android:id="@+id/textdiantinumber"
            android:background="@drawable/edittext_style"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:paddingLeft="5dp"
            android:inputType="numberDecimal"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="扫描"
            android:id="@+id/scan2"
            android:background="@drawable/buttonclickstyle"
            />
        </RelativeLayout>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/list1"
            style="@style/List"

            android:layout_marginTop="5dp"
            android:listSelector="@color/palegreen"
            />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="执行任务"
        android:id="@+id/buttondo"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonclear"
        android:layout_toRightOf="@+id/buttondo"
        android:layout_marginLeft="5dp"
        android:text="数据清除"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonconfim"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/buttonclear"
        android:text="任务确认"
        android:textSize="18dp"
        />
    </RelativeLayout>

        </LinearLayout>

</RelativeLayout>
